{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "server.ts"],
  "exclude": ["node_modules"]
}
